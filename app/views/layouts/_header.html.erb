<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".categories"), categories_path %>
        <li><%= link_to t(".tour_details"), tour_details_path %></li>
        <% if logged_in? %>
          <% if current_user&.admin?%>
            <li><%= link_to t(".users"), users_path %></li>
            <li><%= link_to t(".tours"), tours_path %></li>
            <li><%= link_to t(".revenues"), revenues_path %></li>
          <% end %>
          <li><%= link_to t(".reviews"), reviews_path %></li>
          <li><%= link_to t(".bookings"), bookings_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
