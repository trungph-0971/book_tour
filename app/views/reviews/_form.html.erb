<%= form_for @review do |f| %>
  <div class="modal-body">
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :tour_detail_id, value: @tour_detail %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.label t(".rating") %>
  <%= f.number_field :rating, class: "form-control", max: 10, min:1 %>

  <%= f.label t(".content") %>
  <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="picture-info">
      <%= f.fields_for :pictures_attributes do |image_f| %>
        <%= image_f.hidden_field :picture_cache %>
        <%= image_f.file_field :link %>
      <% end %>
    </div>
  </div>

  <div class="modal-footer">
    <%= f.submit t(".submit"), class: "btn btn-primary" %>
  </div>
<% end %>
