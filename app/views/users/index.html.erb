<% provide :title, t(".title") %>
<h1><%= t ".h1" %></h1>

<div class="add_btn">
<%= link_to new_user_registration_path, class: "btn btn-sm btn-primary" do %>
  <span class="glyphicon glyphicon-plus"></span> <%= t ".add" %>
<% end %>
</div>

<%= search_form_for @search, class: "form-inline" do |f| %>
	<div class="form-group">
    <%= f.text_field :name_cont, class: "form-control", placeholder: t(".placeholder_1") %><br>
  </div>
  <div class="form-group">
    <%= f.text_field :email_cont, class: "form-control", placeholder: t(".placeholder_2") %><br>
  </div>
  <div class="form-group">
    <%= f.text_field :phone_number_cont, class: "form-control", placeholder: t(".placeholder_3") %><br>
  </div>
  <%= f.submit t(".search"), class: "btn btn-default search-btn"%>
<% end %>

<table>
  <thead>
    <th> <%= t ".cus_name" %> </th>
    <th> <%= t ".email" %> </th>
    <th> <%= t ".phone_number" %> </th>
    <th> <%= t ".created_at" %> </th>
    <th> <%= t ".updated_at" %> </th>
    <th> <%= t ".operations" %> </th>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= link_to user.name, user %> </td>
          <td> <%= user.email %> </td>
          <td> <%= user.phone_number %> </td>
          <td> <%= user.created_at %> </td>
          <td> <%= user.updated_at %> </td>
          <td>
            <%= link_to edit_user_path(user), class: "btn btn-sm btn-warning" do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to user, method: :delete,
                                     data: { confirm: t(".confirm") }, class: "btn btn-sm btn-danger" do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
<%= will_paginate @users%>
